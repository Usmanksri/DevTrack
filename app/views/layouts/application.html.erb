    <!DOCTYPE html>
    <html>
      <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>DevTrack</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
    
        <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
        <%= javascript_importmap_tags %>
        <style>
        .flash-notice-container {
          background-color: green;
          color: white;
          padding: 10px;
          margin-bottom: 10px;
          display: none; 
        }
        .flash-alert-container {
          background-color: yellow;
          color: white;
          padding: 10px;
          margin-bottom: 10px;
          display: none; 
        }
      </style>

      </head>
      <body>
      <%= render "layouts/navbar" %>
      <br/>

      <% if notice %>
      <div class="flash-notice-container">
        <%= notice %>
      </div>
    <% end %>
  
    <% if alert %>
      <div class="flash-alert-container">
        <%= alert %>
      </div>
    <% end %>
  
    <%= yield %>
  
    <!-- Add your JavaScript/jQuery code here -->
    <script>
      $(document).ready(function() {
        // Show the flash notice container with a fade-in effect
        $('.flash-notice-container, .flash-alert-container').fadeIn('slow');
  
        // Hide the flash notice containers after a certain time (e.g., 5 seconds)
        setTimeout(function() {
          $('.flash-notice-container, .flash-alert-container').fadeOut('slow');
        }, 5000);
      });
    </script>
      </body>
    </html>
